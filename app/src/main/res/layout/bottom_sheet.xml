<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="150dp"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/mediaPlayerContainer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="16dp">

        <com.gauravk.audiovisualizer.visualizer.BlastVisualizer
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mVisualizer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                custom:avDensity="0.8"
                custom:avType="fill"
                custom:avColor="#F22CEA"
                custom:avSpeed="normal"
                android:visibility="visible"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintEnd_toEndOf="parent"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:saveEnabled="false"
                android:thumb="@drawable/thumb"
                android:progressTint="#FFF"
                android:elevation="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
                android:id="@+id/refreshBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_refresh"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:padding="6dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toStartOf="@+id/prevBtn"/>

        <ImageButton
                android:id="@+id/refreshOneBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_refresh_one"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:saveEnabled="false"
                android:padding="6dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toStartOf="@+id/prevBtn"/>

        <ImageButton
                android:id="@+id/prevBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_prev"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:paddingTop="14dp"
                android:paddingRight="16dp"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn"
                app:layout_constraintEnd_toEndOf="@id/playBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/playBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/ic_play"
                android:paddingRight="18dp"
                android:paddingBottom="18dp"
                android:paddingTop="18dp"
                android:paddingLeft="22dp"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/pauseBtn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/ic_pause"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:saveEnabled="false"
                android:elevation="16dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/nextBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_next"
                android:paddingTop="14dp"
                android:paddingRight="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="16dp"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/playBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <ImageButton
                android:id="@+id/shuffleBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_shuffle"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:saveEnabled="true"
                android:padding="6dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nextBtn"
                android:layout_marginStart="24dp"/>
        <ImageButton
                android:id="@+id/shuffleBtnActive"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:srcCompat="@drawable/ic_shuffle_active"
                android:scaleType="fitCenter"
                android:visibility="invisible"
                android:saveEnabled="false"
                android:padding="6dp"
                android:elevation="16dp"
                android:background="@drawable/rounded_btn_transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nextBtn"
                android:layout_marginStart="24dp"/>
        <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <!--<android.support.constraint.ConstraintLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_blue">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                android:id="@+id/songName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do not let me down"

                android:textColor="@color/white"
                android:layout_margin="16dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/songText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/default_song_text"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
            />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:background="@color/dark_blue">

                <ImageButton
                        android:id="@+id/closeBottomSheet"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/ic_back"
                        android:scaleType="fitCenter"
                        android:visibility="visible"
                        android:saveEnabled="true"
                        android:paddingTop="16dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="14dp"
                        android:elevation="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_sheet_btn_riple"
                        android:backgroundTint="@color/white_dark_blue"/>

                <ImageButton
                        android:id="@+id/toFavorite"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/ic_star_gray"
                        android:scaleType="fitCenter"
                        android:visibility="visible"
                        android:saveEnabled="true"
                        android:paddingTop="14dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="14dp"
                        android:paddingLeft="14dp"
                        android:elevation="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_sheet_btn_riple"
                        android:backgroundTint="@color/white_dark_blue"/>

                <ImageButton
                        android:id="@+id/toFavoriteActive"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/ic_star"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        android:saveEnabled="true"
                        android:paddingTop="14dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="14dp"
                        android:paddingLeft="14dp"
                        android:elevation="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_sheet_btn_riple"
                        android:backgroundTint="@color/white_dark_blue"/>

                <ImageButton
                        android:id="@+id/shareSong"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/ic_share"
                        android:scaleType="fitCenter"
                        android:visibility="visible"
                        android:saveEnabled="true"
                        android:paddingTop="14dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="14dp"
                        android:paddingLeft="14dp"
                        android:elevation="16dp"
                        android:layout_marginStart="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_sheet_btn_riple"
                        android:backgroundTint="@color/white_dark_blue"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!--</android.support.constraint.ConstraintLayout>-->
</LinearLayout>